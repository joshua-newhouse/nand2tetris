/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16], load, inc, reset;
    OUT out[16];

    PARTS:
    DFF16(in=rout, out=outbus, out=out);

    Zero16(in=outbus, z=reset, out=zout);
    Inc16(in=outbus, out=iout);

    Mux16(a=outbus, b=iout, sel=inc, out=incout);
    Mux16(a=incout, b=in, sel=load, out=lout);
    Mux16(a=lout, b=zout, sel=reset, out=rout);

}
